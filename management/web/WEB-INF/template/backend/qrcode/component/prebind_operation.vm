        <div id="page-breadcrumb-wrapper">
            <div id="page-breadcrumb">
                <a href="javascript:;">
                    <i class="glyph-icon icon-dashboard"></i>
                        首页
                </a>
                <a href="javascript:;">
                    <i class="glyph-icon icon-laptop"></i>
                    二维码
                </a>
                <span class="current">
                    预绑定
                </span>
            </div>
        </div>
        <div id="page-content">
            <h4>预绑定</h4>
            <div id="range-deliver-form">
                <div class="col-md-10 center-margin">
                    <div class="form-row">
                        <div class="form-input">
                            <div class="row">
                                <div class="col-md-2">
                                    <label>主板编号:</label>
                                </div>
                                <div class="col-md-3">
                                    <input placeholder="请输入主板编号" id="uid" type="text" autocomplete="off">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-input">
                            <div class="row">
                                <div class="col-md-2">
                                    <label>二维码编号:</label>
                                </div>
                                <div class="col-md-3">
                                    <input placeholder="请输入二维码编号" id="codeid" type="text" autocomplete="off">
                                </div>
                                <div class="col-md-2">
                                    <button class='btn large bg-blue' id="confirm-prebind-btn">
                                        <span clas='button-content'>预绑定</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr/>
        </div>
    </div>
</div>
<script>
	$("#confirm-prebind-btn").on('click', function(result) {
    	var uid = $("#uid").val();
    	var codeid = $("#codeid").val();
   		var url = "${path.concat('/qrcode/prebind')}"
   		$.post(url, {uid: uid, codeId: codeid}, function(result) {
    		if(result.responseCode == "RESPONSE_OK") {
    			alert("成功");
   			}
   		})
   	})
</script>